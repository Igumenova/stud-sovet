include ../../../ui/ui
include order_raw



mixin admin_doc(css, js, host)
    doctype html
    html(lang="ru")
        head
            meta(charset='UTF-8')
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            for file in css
                link(rel="stylesheet", href= host + "/" + file)
            link(rel="icon" href= host + "/icons/favicon.ico")
            link(rel="apple-touch-icon" href= host + "/icons/apple-touch-icon.png")
            link(rel="manifest" href= host + "/icons/site.webmanifest")
            title Админочка
        body
            .navbar
                +btn-link('Команды', 'info-inv', host + "/admin/orders")
                +btn('не жмать', 'info-inv', 'to_projects')
            .view
                block

            script 
                | const host = "#{host}";
            for file in js
                script(src= host + "/" +file)